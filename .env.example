# Google auth (put real file under ./secrets/)
GOOGLE_SERVICE_ACCOUNT_FILE=./secrets/service_account.json

# Anchor config sheet (the one with Holidays/Config/Windows/Blacklist/Cabal_Tiers/Callers)
CONFIG_SHEET_ID=YOUR_CONFIG_SHEET_ID

# Output Drive folder to store month spreadsheets
OUTPUT_DRIVE_FOLDER_ID=YOUR_OUTPUT_FOLDER_ID

# Knobs
PER_CALLER_TARGET=80
INCLUDE_WEEKENDS=false
AUDIT_CSV=false
STRICT_SCHEMA=true
APP_TIMEZONE=Asia/Bangkok

# Data sources
USE_REAL_DB=false
DATABASE_URL_WEBVIEW=
DATABASE_URL_WEBVIEW_PC=
DATABASE_URL_WEBVIEW_MOBILE=
DATABASE_URL_GRAFANA=
REDEMPTION_TIME_COLUMN=created_at

# Drop toggles
DROP_UNREACHABLE_REPEAT=true
UNREACHABLE_MIN_COUNT=2
DROP_ANSWERED_THIS_MONTH=true
DROP_INVALID_NUMBER=true
DROP_NOT_INTERESTED_THIS_MONTH=true
DROP_NOT_OWNER_AS_BLACKLIST=true
DROP_REDEEMED_TODAY=true

# Optional column names (set when DB schema is known)
ARK_GEM_COLUMN=ark_gem_balance
LIFETIME_TOPUP_TABLE=user_lifetime_topup
LIFETIME_TOPUP_KEY=username
LIFETIME_TOPUP_AMOUNT_COL=total_topup

# Naming
OUTPUT_FILE_PREFIX=CBTH

# Discord (set when ready)
DISCORD_WEBHOOK_A=
DISCORD_WEBHOOK_NON_A=
